page{
  height: 100%;
  /*必须加上，否则设置整个屏幕高度不起作用  */
}
.main{
  width: 100%;
  height: 100%;
  background-color: floralwhite;
}
.header{
  width: 100%;
  box-sizing: border-box;
  -webkit-box-sizing: -webkit-border-box;
  padding:30px 20px 15px;
  height: 162px;
  display: block;
  overflow: hidden;
}
 .container {
  width: 300px;
  height: 300px;
  margin: auto;
  background-color: #CCC0B2;
  border-radius: 10px;
} 
